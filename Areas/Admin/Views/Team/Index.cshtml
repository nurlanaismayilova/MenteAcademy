@using sitee.Models
@{
    int count = 1;
}
@model ICollection<Team>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Member Name
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-info">
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img src="~/assets/img/team/@item.Image" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Profession.Name
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete-variant"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <a asp-action="Create" type="button" class="btn btn-outline-success btn-fw">Create</a>
            </div>
        </div>
    </div>
</div>